<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_make_api_call"
        android:text="@string/api_call_to_fetch_my_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"/>

    <EditText
        android:id="@+id/edit_text_share_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/share_comment" />

    <Button
        android:id="@+id/button_make_post_api_call"
        android:text="@string/api_call_to_share_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_view_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="10dip"/>

</LinearLayout>
